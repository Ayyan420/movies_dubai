<odoo>
    <record id="account_move_inherit_invoice_view" model="ir.ui.view">
        <field name="name">account.move.inherit.invoice.view</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_move_form" />
        <field name="arch" type="xml">
            <xpath expr="//page[@name='other_info']" position="after">
                <page name="payment_details" invisible="move_type != 'out_invoice'" string="Payment Details">
                    <group>
                        <group>
                            <field name="payment_reference"></field>
                            <field name="user_attachment_ids" widget="many2many_binary"></field>
                        </group>
                    </group>
                </page>
            </xpath>
            <xpath expr="//header/button[@name='action_reverse']" position="attributes">
                <attribute name="groups">account.group_account_manager,base.group_system</attribute>
            </xpath>
            <xpath expr="//field[@name='invoice_date']" position="after">
                <field name="target_delivery_date" readonly="state != 'draft'" invisible="move_type != 'out_invoice'" />
            </xpath>
            <xpath expr="//field[@name='payment_reference']" position="after">
                <field name="payment_method_id" readonly="state != 'draft' or sale_order_count != 0" widget="many2many_tags" domain="[('journal_id.type','=','bank'),('payment_type','=','inbound')]" required="move_type == 'out_invoice'" invisible="move_type != 'out_invoice'" />
                <field name="payment_method_payment_mode" invisible="1" />
                <field name="payment_installment_id" readonly="state != 'draft' or sale_order_count != 0" widget="many2many_tags" domain="[('payment_method_id', 'in', payment_method_id)]" context="{'default_payment_method_id': payment_method_id}" invisible="not payment_method_id or payment_method_payment_mode != 'installments'" required="payment_method_payment_mode == 'installments'" options="{'no_create': True}" />
            </xpath>
            <xpath expr="//page[@name='other_info']" position="attributes">
                <attribute name="groups">account.group_account_manager,base.group_system</attribute>
            </xpath>
            <xpath expr="//page[@name='aml_tab']" position="attributes">
                <attribute name="groups">account.group_account_manager,base.group_system</attribute>
            </xpath>
            <xpath expr="//page[@name='aml_tab']" position="attributes">
                <attribute name="groups">account.group_account_manager,base.group_system</attribute>
            </xpath>
            <xpath expr="//page[@name='other_info'][@id='other_tab_entry']" position="attributes">
                <attribute name="groups">account.group_account_manager,base.group_system</attribute>
            </xpath>
            <xpath expr="//field[@name='partner_id']" position="attributes">
                <attribute name="context">{'res_partner_search_mode': (context.get('default_move_type', 'entry') in ('out_invoice', 'out_refund', 'out_receipt') and 'customer') or (context.get('default_move_type', 'entry') in ('in_invoice', 'in_refund', 'in_receipt') and 'supplier') or False, 'show_address': False, 'default_is_company': True, 'show_vat': False}</attribute>
            </xpath>
            <xpath expr="//field[@name='invoice_payment_term_id']" position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>
            <xpath expr="//label[@for='invoice_payment_term_id']" position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>
            <xpath expr="//field[@name='partner_shipping_id']" position="attributes">
                <attribute name="context">{'default_type': 'delivery', 'show_address': True, 'show_vat': True, 'default_parent_id': partner_id}</attribute>
            </xpath>
        </field>
    </record>
</odoo>