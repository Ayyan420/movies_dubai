<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_account_payment_register_form_ext" model="ir.ui.view">
        <field name="name">account.payment.register.ext</field>
        <field name="model">account.payment.register</field>
        <field name="inherit_id" ref="account.view_account_payment_register_form" />
        <field name="arch" type="xml">
            <xpath expr="//field[@name='journal_id']" position="after">
                <field name="is_from_sale" invisible="1" readonly="1"></field>
                <field name="payment_method_id" invisible="1" readonly="1" widget="many2many_tags" domain="[('journal_id.type','=','bank'),('payment_type','=','inbound')]" />
                <field name="payment_method_payment_mode" invisible="1" />
                <field name="payment_installment_id" invisible="1" readonly="1" widget="many2many_tags" domain="[('payment_method_id', 'in', payment_method_id)]" options="{'no_create': True}" />
                <field name="selected_payment_installment_id" domain="[('id', 'in', payment_installment_id)]" invisible="not payment_method_id or payment_method_payment_mode != 'installments'" required="payment_method_payment_mode == 'installments'" options="{'no_create': True}" />
            </xpath>
            <xpath expr="//field[@name='payment_method_line_id']" position="replace">
                <field name="payment_method_line_id" invisible="not payment_method_id" context="{'hide_payment_journal_id': 1}" required="1" options="{'no_create': True, 'no_open': True}" domain="[('id','in',payment_method_id)]" />
                <field name="payment_method_line_id" context="{'hide_payment_journal_id': 1}" required="1" options="{'no_create': True, 'no_open': True}" domain="[('id','in',available_payment_method_line_ids)]" invisible="payment_method_id" />
            </xpath>
            <xpath expr="//field[@name='partner_bank_id']" position="replace">
                <field name="partner_bank_id" invisible="1" readonly="payment_type == 'inbound'" required="require_partner_bank_account and can_edit_wizard and (not can_group_payments or not group_payment)" placeholder="Account Number" context="{'display_account_trust': True, 'default_partner_id': partner_id}" />
            </xpath>
            <xpath expr="//field[@name='amount']" position="replace">
                <field name="amount" force_save="1" readonly="1" groups="!sales_team.group_sale_salesman_all_leads" />
                <field name="amount" force_save="1" readonly="not can_edit_wizard or can_group_payments and not group_payment" groups="sales_team.group_sale_manager,sales_team.group_sale_salesman_all_leads" />
            </xpath>
            <xpath expr="//field[@name='journal_id']" position="replace">
                <field name="journal_id" options="{'no_open': True, 'no_create': True}" readonly="1" required="1" groups="!sales_team.group_sale_salesman_all_leads" />
                <field name="journal_id" options="{'no_open': True, 'no_create': True}" required="1" groups="sales_team.group_sale_manager,sales_team.group_sale_salesman_all_leads" />
            </xpath>
        </field>
    </record>
</odoo>